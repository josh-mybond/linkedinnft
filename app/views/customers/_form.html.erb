<%= form_with(model: customer, id:'myform') do |form| %>
  <% if customer.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-12">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="col-12">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div class="col-12">
    <%= form.label :linkedin_profile_url, style: "display: block" %>
    <%= form.text_field :linkedin_profile_url %>
  </div>

  <div class="col-12">
    <%= form.label :linkedin_profile_image, style: "display: block" %>
    <%= form.file_field :linkedin_profile_image %>
  </div>

  <div class="col-12">
    <%= form.submit 'Purchase'%>
  </div>
  <div class="col-12">
    <span class="type--fine-print">By purchasing, you agree to the <a href="#">Terms of Service</a>
    </span>
  </div>
<% end %>
